@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Share.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Thêm mới nhà cung cấp - giá cước
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form"> 
                                <div class="form-group">
                                    <label>Nhà cung cấp</label><br />
                                    <input id="idncc" class="form-control" style="width: 50%">

                                </div>
                                <div class="form-group">
                                    <label>Loại dịch vụ</label><br />
                                    <input id="idtype" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Tình trạng</label>
                                    <select id="idstatus" class="form-control" style="width: 25%">
                                        <option value="0" style="color: red">Tạm ngưng</option>
                                        <option value="1" style="color: green" selected>Kích hoạt</option>
                                    </select>

                                </div>                              
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Block1</label>
                                    <input id="idblock1" type="number" style="width: 25%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Giá Block1</label>
                                    <input id="idpriceblock1" type="number" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Block2</label>
                                    <input id="idblock2" type="number" style="width: 25%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Giá Block2</label>
                                    <input id="idpriceblock2" type="number" style="width: 50%" class="form-control">

                                </div>
                               
                            </form>

                        </div>
                        <div class="col-lg-12">
                            <p id="idinfo" class="help-block"></p>
                            <button type="button" id="idsave" class="btn btn-default">Lưu</button>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="~/Scripts/Areas/ServiceProvider/NewServiceCharge.js"></script>



