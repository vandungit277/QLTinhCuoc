@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Share.cshtml";
}
<head>
    <title></title>
    <link href="~/Content/KendoUI/Content/kendo/kendo.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/KendoUI/Content/kendo/kendo.bootstrap.mobile.min.css" rel="stylesheet" />
    <link href="~/Content/KendoUI/Content/kendo/kendo.common-bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/KendoUI/Scripts/kendo/kendo.all.min.js"></script>
</head>

<body>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Thêm mới số nộ bộ
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Tài khoản nhận IPPhone</label>
                                    <input id ="idusername"style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Nhà cung cấp</label><br/>
                                    <input id="idncc" class="form-control" style="width: 50%">

                                </div>
                                <div class="form-group">
                                    <label>IPPhone</label>
                                    <input id="idipphone" style="width: 50%" class="form-control">

                                </div>


                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Tình trạng</label>
                                    <select id="idstatus" class="form-control" style="width: 25%">
                                        <option value="0" style="color: red">Tạm ngưng</option>
                                        <option value="1"style="color: green" selected>Kích hoạt</option>
                                    </select>

                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <textarea id="iddesc" class="form-control" rows="5"></textarea>

                                </div>

                            </form>

                        </div>
                        <div class="col-lg-12">
                            <p id="idinfo" class="help-block"></p>
                            <button type="button" id="idsave" class="btn btn-default">Submit Button</button>
                            <button type="reset" class="btn btn-default">Reset Button</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="~/Scripts/Areas/PhoneInside/NewPhone.js"></script>

</body>


