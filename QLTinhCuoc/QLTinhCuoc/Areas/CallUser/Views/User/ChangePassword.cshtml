@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Share.cshtml";
}


<body>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đổi mật khẩu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                           
                            <div class="form-group">
                                <label>Mật khẩu cũ</label>
                                <input class="form-control" maxlength="15" id="idOldPassword" type="password" style="width: 70%" autofocus required>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <form role="form">
                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input class="form-control" maxlength="15" id="idNewPassword" type="password" style="width: 70%" autofocus required>
                            </div>
                           
                        </form>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <p id ="idinfo"class="help-block"></p>
                
                <input class="btn btn-default" id="idchange" value="Đổi mật khẩu" type="button">
                <!-- /.panel-body -->
            </div>
           
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Areas/CallUser/ChangePassword.js"></script>
</body>

