@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Share.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Thêm mới nhân viên
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Công ty</label><br />
                                    <input id="idcompany" class="form-control" style="width: 50%">

                                </div>
                                <div class="form-group">
                                    <label>Chi nhánh</label><br />
                                    <input id="idbranch" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Phòng ban</label><br />
                                    <input id="iddepartment" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Chức vụ</label><br />
                                    <input id="idrole" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Họ tên nhân viên</label><br />
                                    <input id="idstaffname" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Năm sinh</label><br />
                                    <input id="idbirtday" onblur="CheckDate(this.value, 'idbirtday')" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Địa chỉ</label>
                                    <textarea id="idaddress" class="form-control" rows="3" style="width: 50%"></textarea>

                                </div>

                                <div class="form-group">
                                    <label>Giới tính</label>
                                    <select id="idsex" class="form-control" style="width: 25%">
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                    </select>

                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Tình trạng</label>
                                    <select id="idstatus" class="form-control" style="width: 25%">
                                        <option value="0" style="color: red">Tạm ngưng</option>
                                        <option value="1" style="color: green" selected>Kích hoạt</option>
                                    </select>

                                </div>
                                <div class="form-group">
                                    <label>Ngày vào công ty</label><br />
                                    <input id="iddayin" onblur="CheckDate(this.value, 'iddayin')" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>CMND</label>
                                    <input id="idpassport" type="text" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input id="idemail" type="email" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại</label>
                                    <input id="idphone" type="text" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>UserName</label>
                                    <input id="idusername" type="text" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input id="idpassword" type="password" maxlength="15" style="width: 50%" class="form-control">

                                </div>
                                <div class="form-group">
                                    <label>Nhập lại mật khẩu</label>
                                    <input id="idrppassword" type="password" maxlength="15" style="width: 50%" class="form-control">

                                </div>
                            </form>

                        </div>
                        <div class="col-lg-12">
                            <p id="idinfo" class="help-block"></p>
                            <button type="button" id="idsave" class="btn btn-default">Lưu</button>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="~/Scripts/Areas/CallStaff/NewStaff.js"></script>



